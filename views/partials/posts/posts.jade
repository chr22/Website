.posts(ng-controller="PostsCtrl")
	img(src="images/loading.gif", alt="Loading", title="Loading", ng-hide="loaded")
	h2 Blog posts
	ul
		li
			a(href='#/addPost') Add a new post
	p There are {{posts.length}} posts
		.flex-container
			div.postFormat(ng-repeat='post in posts')			
				h2 {{post.title}}
				p.shortText.lightFont {{post.text}} <br/>
				a(ng-click="ReadPost(post._id)") More
				|	- 
				a(ng-click="EditPost(post._id)") Edit
				|	- 
				a(ng-click="DeletePost(post._id)") Delete